# Environment Configuration for Churchill Application Portal
# Copy this file to .env and fill in your values

# ============================================================================
# Application
# ============================================================================
APP_NAME=Churchill Application Portal
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=False

# ============================================================================
# Database (PostgreSQL 16)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=churchill_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=churchill_portal

# ============================================================================
# Security
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS (Frontend URLs)
# ============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================================================
# Azure Services (Optional for MVP - can use local storage)
# ============================================================================
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_FORM_RECOGNIZER_ENDPOINT=
AZURE_FORM_RECOGNIZER_KEY=
AZURE_COMMUNICATION_CONNECTION_STRING=

# ============================================================================
# Redis & Celery (Background Tasks)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# Email (Fallback SMTP if not using Azure Communication Services)
# ============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@churchilleducation.edu.au
EMAILS_FROM_NAME=Churchill Education

# ============================================================================
# File Upload
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_DOCUMENT_EXTENSIONS=[".pdf",".jpg",".jpeg",".png",".doc",".docx"]

# ============================================================================
# Multi-tenancy (Set after first migration)
# ============================================================================
CHURCHILL_RTO_ID=
